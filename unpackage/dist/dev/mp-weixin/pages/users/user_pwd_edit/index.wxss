.ChangePassword .phone {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  padding-top: 100rpx;
}
.ChangePassword .list {
  width: 580rpx;
  margin: 53rpx auto 0 auto;
}
.ChangePassword .list .item {
  width: 100%;
  height: 110rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.ChangePassword .list .item input {
  width: 100%;
  height: 100%;
  font-size: 32rpx;
}
.ChangePassword .list .item .placeholder {
  color: #b9b9bc;
}
.ChangePassword .list .item input.codeIput {
  width: 340rpx;
}
.ChangePassword .list .item .code {
  font-size: 32rpx;
  color: theme;
}
[data-theme="theme1"] .ChangePassword .list .item .code {
  color: #e93323 !important;
}
[data-theme="theme2"] .ChangePassword .list .item .code {
  color: #FE5C2D !important;
}
[data-theme="theme3"] .ChangePassword .list .item .code {
  color: #42CA4D !important;
}
[data-theme="theme4"] .ChangePassword .list .item .code {
  color: #1DB0FC !important;
}
[data-theme="theme5"] .ChangePassword .list .item .code {
  color: #FF448F !important;
}
.ChangePassword .list .item .code.on {
  color: #b9b9bc !important;
}
.ChangePassword .confirmBnt {
  font-size: 32rpx;
  width: 580rpx;
  height: 90rpx;
  border-radius: 45rpx;
  color: #fff;
  margin: 92rpx auto 0 auto;
  text-align: center;
  line-height: 90rpx;
  background-color: theme;
}
[data-theme="theme1"] .ChangePassword .confirmBnt {
  background-color: #e93323 !important;
}
[data-theme="theme2"] .ChangePassword .confirmBnt {
  background-color: #FE5C2D !important;
}
[data-theme="theme3"] .ChangePassword .confirmBnt {
  background-color: #42CA4D !important;
}
[data-theme="theme4"] .ChangePassword .confirmBnt {
  background-color: #1DB0FC !important;
}
[data-theme="theme5"] .ChangePassword .confirmBnt {
  background-color: #FF448F !important;
}

